{
  "name": "static",
  "version": "2.0.0",
  "description": "Node-based static site generator/boilerplate",
  "main": "index.js",
  "scripts": {
    "comb": "csscomb .",
    "lint:js": "eslint .",
    "lint": "npm run comb & npm run lint:js",
    "test": "karma start",
    "build": "nodemon index.js",
    "develop": "node ./lib/tasks/develop.js",
    "start": "npm run build & npm run develop"
  },
  "license": "MIT",
  "browser": {},
  "browserify-shim": {},
  "browserify": {
    "transform": [
      "browserify-shim",
      [ "babelify", {
